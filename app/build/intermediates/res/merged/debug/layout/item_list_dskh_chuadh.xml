<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/tabRow1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".083"
            android:background="@drawable/boder_tablelayout"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_dskh_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bctk_stt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".083"
            android:background="@drawable/boder_tablelayout">

            <TextView
                android:id="@+id/tv_dskh_makh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/bctk_makh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".083"
            android:background="@drawable/boder_tablelayout">

            <TextView
                android:id="@+id/tv_dskh_tenkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bctk_tenkh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".209"
            android:background="@drawable/boder_tablelayout">

            <TextView
                android:id="@+id/tv_dskh_diachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/bctk_diachi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.083"
            android:background="@drawable/boder_tablelayout"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_dskh_tansuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bctk_tansuatgt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".209"
            android:background="@drawable/boder_tablelayout">

            <TextView
                android:id="@+id/tv_dskh_tuyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bctk_tuyen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".125"
            android:background="@drawable/boder_tablelayout"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_dskh_dsthang_gannhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bctk_dsthanggannhat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".125"
            android:background="@drawable/boder_tablelayout"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_dskh_ngaydh_gannhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/bctk_ngayDHgannhat" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>