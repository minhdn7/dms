<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/numb"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/neo_xanhlam"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/White"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/neo_vang" />

    <RelativeLayout
        android:id="@+id/item_list_dsdh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/list_row_selector"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/txt_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="[Số 109] - [08/07/2015] - [Mới lập]"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Ten KH"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/Black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Nhà PP: Cty phân phối sữa A"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/Black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item3"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Tổng tiền: 0; Khuyến mại: 0"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/Black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_item5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item4"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Ghi chú:"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/neo_xanhngoc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ls_xoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_row_selector"
                android:src="@drawable/ic_delete3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/neo_xanhngoc" />

            <ImageButton
                android:id="@+id/ls_chitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_row_selector"
                android:contentDescription="Chi tiet thong tin"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>