<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/White"
	android:orientation="vertical"
	android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_layout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/KH_layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">

            <EditText
                android:id="@+id/txtSearchKH"
                style="@style/primary_edittext_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3.4"
                android:background="@drawable/edittext_bg"
                android:hint="@string/hint_timKiemKH"
                android:imeOptions="actionDone"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spin_tuyen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.8"
                android:drawSelectorOnTop="true"
                android:prompt="@string/name_spTuyen" />

            <Spinner
                android:id="@+id/spin_trangthai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.8"
                android:drawSelectorOnTop="true"
                android:prompt="@string/name_spTrangThai" />

            <CheckBox
                android:id="@+id/ckSearchAdvence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/timNangCao" />

            <Button
                android:id="@+id/btnSearch"
                style="@style/primary_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/primary_button_selector"
                android:text="@string/btn_timKiemKH"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewSearchAdvance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3.5"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/vung" />

                    <AutoCompleteTextView
                        android:id="@+id/txtVung"
                        style="@style/primary_edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_bg"
                        android:completionThreshold="1"
                        android:ems="20"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true"
                        android:spinnerMode="dialog"

                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="3.5"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="@string/khuVuc" />

                    <AutoCompleteTextView
                        android:id="@+id/txtKhuVuc"
                        style="@style/primary_edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:background="@drawable/edittext_bg"
                        android:completionThreshold="1"
                        android:ems="20"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true"
                        android:spinnerMode="dialog"

                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3.5"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tinh" />

                    <AutoCompleteTextView
                        android:id="@+id/txtTinh"
                        style="@style/primary_edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@drawable/edittext_bg"
                        android:completionThreshold="1"
                        android:ems="20"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true"
                        android:spinnerMode="dialog"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="3.5"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_weight="1.50"
                        android:gravity="center_vertical"
                        android:text="@string/quanHuyen" />

                    <AutoCompleteTextView
                        android:id="@+id/txtQuanHuyen"
                        style="@style/primary_edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:background="@drawable/edittext_bg"
                        android:completionThreshold="1"
                        android:ems="20"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true"
                        android:spinnerMode="dialog"

                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdvanceSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
		android:id="@+id/KH_layout_lv"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_alert"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingBottom="20dp"
            android:paddingTop="10dp"
			android:visibility="gone"
			android:text="@string/text_no_data"
			android:textColor="#FF0000"
			android:textSize="16sp" />

		<ListView
			android:id="@android:id/list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:divider="@color/ldivider"
			android:dividerHeight="1dp"
			android:background="@drawable/primary_layout_bg"
			android:listSelector="@drawable/list_row_selector"
			android:transcriptMode="normal" />


	</FrameLayout>

</LinearLayout>