    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_layout_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp" >

                <TextView
                    android:id="@+id/tv_NVKD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/bctk_nvkd"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_searchKPI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/primary_button_selector"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/bctk_search"
                    android:textColor="@color/White" />

                <Spinner
                    android:id="@+id/sp_NVKD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btn_searchKPI"
                    android:layout_toRightOf="@+id/tv_NVKD"
                    android:gravity="center_vertical" />

                <RelativeLayout
                    android:id="@+id/layout_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sp_NVKD"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/btn_searchKPI"
                    android:layout_toRightOf="@+id/tv_NVKD" >

                    <EditText
                        android:id="@+id/et_startDateKPI"
                        style="@style/primary_edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/edittext_bg" />

                    <ImageView
                        android:id="@+id/iv_startDateKPI"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/et_startDateKPI"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_calendar" />

                    <EditText
                        android:id="@+id/et_endDateTKC"
                        style="@style/primary_edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/edittext_bg" />

                    <ImageView
