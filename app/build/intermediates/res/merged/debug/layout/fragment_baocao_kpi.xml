                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/et_endDateTKC"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_calendar" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

