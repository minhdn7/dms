<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >
    
    <LinearLayout
        android:id="@+id/kh_guiBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/primary_layout_bg"
        android:orientation="horizontal"
        android:padding="2dp" 
        android:visibility="visible">

        <Button
            android:id="@+id/btn_ks_capnhat"
            style="@style/primary_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_selector"
            android:contentDescription="@string/cn_khaosat"
            android:text="@string/kh_xacnhan" />

        <Button
            android:id="@+id/btn_ks_refresh"
            style="@style/primary_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_selector"
            android:contentDescription="@string/cn_khaosat"
            android:text="@string/btn_refresh" />

        <Button
            android:id="@+id/btn_ks_close"
            style="@style/primary_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_selector"
            android:contentDescription="@string/cn_khaosat"
            android:text="@string/btn_dong" />
    </LinearLayout>
    
    <ScrollView
        android:id="@+id/scroll_view_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/kh_guiBL"
        android:padding="5dp"
        android:visibility="gone">

	    <LinearLayout
	        android:id="@+id/layout_bl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:background="@drawable/primary_layout_bg"
	        android:orientation="vertical" >
	        
	    </LinearLayout>
	    
    </ScrollView>
    
    <TextView
        android:id="@+id/tv_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/kh_guiBL"
        android:text="@string/nodata"
        android:textColor="@color/red"
        android:visibility="gone" />

</RelativeLayout>