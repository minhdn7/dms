<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
<LinearLayout
        android:id="@+id/tabRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"            
            android:layout_weight=".063"
            android:background="@drawable/boder_tablelayout"
            android:gravity="center" >

            <TextView
                android:id="@+id/rpt_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/bctk_stt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight=".43"
            android:background="@drawable/boder_tablelayout"            
            android:gravity="left" >

            <TextView
                android:id="@+id/rpt_noidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:text="@string/bctk_noidung" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight=".1"
            android:background="@drawable/boder_tablelayout"
            android:gravity="right" >

            <TextView
                android:id="@+id/rpt_chitieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"  
                android:layout_marginTop="22dp"              
                android:gravity="right"
                android:text="@string/bctk_chitieu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight=".1"
            android:background="@drawable/boder_tablelayout"
            android:gravity="right" >

            <TextView
                android:id="@+id/rpt_thuchien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"  
                android:layout_marginTop="22dp"              
                android:gravity="right"
                android:text="@string/bctk_ketquaTH" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight=".1"
            android:background="@drawable/boder_tablelayout"
            android:gravity="right" >

            <TextView
                android:id="@+id/rpt_conlai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:text="@string/bctk_conlai" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:background="@drawable/boder_tablelayout"
            android:gravity="right" >

            <TextView
                android:id="@+id/rpt_tiendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="22dp"
                android:layout_marginRight="5dp"
                android:text="@string/bctk_tiendo" />
        </LinearLayout>

        
    </LinearLayout>    

</LinearLayout>
