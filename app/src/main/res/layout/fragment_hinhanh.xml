<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/primary_layout_bg"
        android:orientation="horizontal"
        android:layout_above="@+id/kh_guiBL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/ldivider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_row_selector">
        </ListView>

        <TextView
            android:id="@id/android:empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
			android:padding="20dp"
			android:textColor="#FF0000"
			android:textSize="16sp"
			android:text="@string/text_no_data" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kh_guiBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:background="@drawable/primary_layout_bg"
        android:orientation="horizontal"
        android:padding="2dp" >

        <Button
            android:id="@+id/btn_ha_upload"
            style="@style/primary_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_selector"
            android:contentDescription="@string/cn_khaosat"
            android:text="@string/btn_upload" />
        
        <Button
            android:id="@+id/btn_ha_take_photo"
            style="@style/primary_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_selector"
            android:contentDescription="@string/cn_khaosat"
            android:text="@string/btn_take_photo" />

        <Button
            android:id="@+id/btn_ha_refresh"
            style="@style/primary_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_selector"
            android:contentDescription="@string/cn_khaosat"
            android:text="@string/btn_refresh" />

        <Button
            android:id="@+id/btn_ha_close"
            style="@style/primary_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_selector"
            android:contentDescription="@string/cn_khaosat"
            android:text="@string/btn_dong" />
    </LinearLayout>

</RelativeLayout>