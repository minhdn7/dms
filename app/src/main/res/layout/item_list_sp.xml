<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_binhluan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/kh_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/desc_list_item_icon"
        android:paddingLeft="16dp"
        android:src="@drawable/h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp" >

        <TextView
            android:id="@+id/kh_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_xoalsdh"
            android:gravity="center_vertical"
            android:text="Tên SP"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kh_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kh_title"
            android:layout_toLeftOf="@+id/btn_xoalsdh"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Số lượng"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/Black"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_sualsdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/primary_imgbtn_selector"
            android:src="@drawable/ic_edit_32_color"
            android:text="Sửa" />

        <ImageButton
            android:id="@+id/btn_tinhkmlsdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/btn_sualsdh"
            android:background="@drawable/primary_imgbtn_selector"
            android:src="@drawable/ic_sale_32_color"
            android:text="Tính khuyến mại" />

        <ImageButton
            android:id="@+id/btn_xoalsdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/btn_tinhkmlsdh"
            android:background="@drawable/primary_imgbtn_selector"
            android:src="@drawable/ic_close_32_color"
            android:text="Xóa" />
    </RelativeLayout>

</LinearLayout>