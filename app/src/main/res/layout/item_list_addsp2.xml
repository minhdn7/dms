<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_binhluan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/numb"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/neo_xanhlam"
        android:gravity="center"
        android:padding="8dp"
        android:text="2"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="2dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="2dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/txt_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:paddingLeft="2dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="2dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_item5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="2dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txt_item6"
        style="@style/primary_edittext_style"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:background="@drawable/edittext_bg"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="2dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/btn_xoaSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/primary_imgbtn_selector"
            android:padding="4dp"
            android:src="@drawable/ic_delete2" />

        <ImageButton
            android:id="@+id/btn_suaSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/primary_imgbtn_selector"
            android:padding="4dp"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

</LinearLayout>