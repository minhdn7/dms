<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoKhuyenMaiDMS"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/padding_12"
            android:layout_marginTop="@dimen/padding_4"
            android:layout_marginBottom="@dimen/padding_4"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/Black"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/padding_8"
            android:text="@string/VNPTDMS"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="@dimen/padding_6"
        android:layout_height="wrap_content"
        android:id="@+id/txtTilteDanhSachThiNghiem"

        android:text="@string/danhMucXetNghiem"
        android:textAllCaps="true"
        android:textColor="@color/White"
        android:layout_below="@+id/logoKhuyenMaiDMS"
        android:background="@color/lprimary"/>
    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTilteDanhSachThiNghiem"
        android:layout_marginBottom="60dp"
        android:id="@+id/expandListDanhSachThiNghiem"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnChon"
            android:layout_width="100dp"
            android:layout_height="30dp"
            style="@style/primary_button_style"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/primary_button_selector"
            android:text="@string/chon"
            android:textAllCaps="true"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/btnDong"
            android:layout_width="100dp"
            android:layout_height="30dp"
            style="@style/primary_button_style"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:background="@drawable/primary_button_selector"
            android:text="@string/dong"
            android:textAllCaps="true"
            android:textColor="@color/White" />
    </LinearLayout>

</RelativeLayout>