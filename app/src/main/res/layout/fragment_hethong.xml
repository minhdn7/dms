		<!-- Du lieu offline -->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/primary_layout_bg"
			android:orientation="vertical"
			android:padding="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Lấy dữ liệu offline"
				android:textColor="@color/blue"
				android:textSize="18sp" />

			<TextView
				android:id="@+id/text_view_status1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:text="Chưa có dữ liệu offline"
				android:textColor="@color/black"
				android:textSize="16sp" />

			<Button
				android:id="@+id/btn_get_data_offline"
				style="@style/primary_edittext_style"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:background="@drawable/primary_button_selector"
				android:text="Tải dữ liệu offline"
				android:textColor="@color/white" />
		</LinearLayout>
		
		
		<!-- Dong bo du lieu -->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/primary_layout_bg"
			android:orientation="vertical"
			android:padding="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Đồng bộ dữ liệu offline"
				android:textColor="@color/blue"
				android:textSize="18sp" />

			<TextView
			    android:id="@+id/text_view_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:text="Dữ liệu chưa được đồng bộ"
				android:textColor="@color/black"
				android:textSize="16sp" />

			<Button
				android:id="@+id/btn_sync_all"
				style="@style/primary_edittext_style"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:background="@drawable/primary_button_selector"
				android:text="@string/mk_dongbo"
				android:textColor="@color/white" />
		</LinearLayout>
	</LinearLayout>

