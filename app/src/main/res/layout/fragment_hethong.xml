<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/White"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/primary_layout_bg"
			android:orientation="vertical"
			android:padding="10dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="@string/mk_doimk"
				android:textColor="@color/blue"
				android:textSize="18sp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:orientation="vertical">

				<EditText
					android:id="@+id/et_MatKhauCu"
					style="@style/primary_edittext_style"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:layout_weight="1"
					android:background="@drawable/edittext_bg"
					android:hint="@string/mk_cu"
					android:inputType="textPassword" />

				<EditText
					android:id="@+id/et_MatKhauMoi"
					style="@style/primary_edittext_style"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:layout_weight="1"
					android:background="@drawable/edittext_bg"
					android:hint="@string/mk_moi"
					android:inputType="textPassword" />

				<EditText
					android:id="@+id/et_XacNhan"
					style="@style/primary_edittext_style"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:layout_weight="1"
					android:background="@drawable/edittext_bg"
					android:hint="@string/mk_xacnhan"
					android:inputType="textPassword" />

				<Button
					android:id="@+id/btn_XNDoiMauKau"
					style="@style/primary_edittext_style"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:layout_weight="1"
					android:background="@drawable/primary_button_selector"
					android:text="@string/mk_capnhap"
					android:textColor="@color/white" />
			</LinearLayout>
		</LinearLayout>

